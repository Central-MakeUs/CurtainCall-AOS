<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CurtainCall" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@color/primary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.CurtainCall.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_spalsh_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.CurtainCall</item>
    </style>
</resources>